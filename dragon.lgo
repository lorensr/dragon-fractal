to dragon :len :angle :limit
  ifelse :len < :limit [fd :len] [recur :len :angle :limit]
end

to recur :len :angle :limit
  rt :angle
  dragon (:len / 2) 45 :limit
  rt (:angle * -2)
  dragon (:len / 2) -45 :limit
  rt :angle
end

to draw :time :limit
  if :time > :limit [stop]
  setpencolor :time
  pd
  dragon (1000 * (exp :time)) 45 3
  pu
  fd 100
  draw (:time + 1) :limit
end
  
rt 90

